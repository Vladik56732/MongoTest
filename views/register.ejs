<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="stylesheet" href="/public/styles/style.css" />
    </head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial,
                sans-serif;
        }
        body {
            width: 100%;
            background-color: rgb(11, 119, 119);
            color: rgb(72, 71, 72);

            background-image: url('/static/1689281198_vsegda-pomnim-com-p-goluboi-peizazh-foto-72.jpg');
        }

        form {
            border: 1px solid white;
            background-color: transparent;
            backdrop-filter: blur(5px);
        }
    </style>
    <body>
        <%- include('./particals/header',{title: 'Регистрация'})%>
        <form action="" method="post">
            <a href="/auth">Авторизоваться</a>
            <a href="/users">Пользователи</a>
            <label><%= error %></label>
            <input type="text" required name="login" placeholder="Логин" />

            <div class="password">
                <input
                    type="password"
                    id="password"
                    required
                    name="password"
                    placeholder="Пароль"
                />
                <i class="fa-solid fa-eye show-password"></i>
            </div>
            <input
                type="password"
                id="confirmPassword"
                required
                name="confirmPassword"
                placeholder="Пароль еще раз"
            />

            <input type="submit" value="Зарегестрироваться" />
        </form>

        <script>
            const password = document.querySelector('#password')
            const confirmPassword = document.querySelector('#confirmPassword')
            const image = document.querySelector('.show-password')
            image.addEventListener('click', () => {
                console.log(password, confirmPassword)
                if (image.className == 'fa-solid fa-eye show-password') {
                    password.setAttribute('type', 'text')
                    confirmPassword.setAttribute('type', 'text')
                    image.className = 'fa-solid fa-eye-slash show-password'
                } else {
                    password.setAttribute('type', 'password')
                    confirmPassword.setAttribute('type', 'password')
                    image.className = 'fa-solid fa-eye show-password'
                }
            })
        </script>
    </body>
</html>
